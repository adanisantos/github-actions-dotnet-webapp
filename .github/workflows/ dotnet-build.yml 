name: MeuWorkflowDotNet

on:
  push:
    branches: [ "main" ] # ou a sua branch principal
  schedule:
    - cron: '0 * * * *' # Executa a cada hora (no minuto 0 de cada hora)

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout do código
        uses: actions/checkout@v4 # Action pré-existente para fazer o checkout do seu código

      - name: Configurar .NET
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '7.0.x' # ou a versão do .NET que você está usando

      - name: Restaurar dependências
        run: dotnet restore

      - name: Build
        run: dotnet build --configuration Release

      - name: Testar (opcional)
        run: dotnet test --no-restore --verbosity normal

      - name: Script personalizado - Listar diretório
        run: |
          echo "Listando o conteúdo do diretório:"
          ls -l